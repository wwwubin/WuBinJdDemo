<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activitys.MainActivity">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <!--布局优化-->
    <include layout="@layout/divider_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_shouye"
            android:layout_width="@dimen/daohan_width"
            android:layout_height="@dimen/daohan_height"
            android:layout_weight="1"
            android:background="@drawable/selector_shouye"
            android:clickable="true" />

        <TextView
            android:id="@+id/main_fenlei"
            android:layout_width="@dimen/daohan_width"
            android:layout_height="@dimen/daohan_height"
            android:layout_weight="1"
            android:background="@drawable/selector_fenlei" />

        <TextView
            android:id="@+id/main_faxian"
            android:layout_width="@dimen/daohan_width"
            android:layout_height="@dimen/daohan_height"
            android:layout_weight="1"
            android:background="@drawable/selector_fx" />

        <TextView
            android:id="@+id/main_gwc"
            android:layout_width="@dimen/daohan_width"
            android:layout_height="@dimen/daohan_height"
            android:layout_weight="1"
            android:background="@drawable/selector_gwc" />

        <TextView
            android:id="@+id/main_wd"
            android:layout_width="@dimen/daohan_width"
            android:layout_height="@dimen/daohan_height"
            android:layout_weight="1"
            android:background="@drawable/selector_wd" />
    </LinearLayout>

</LinearLayout>